{{#if eventsAttending}}
  {{select-facebook content=eventsAttending
    title="You're going to:" value=selectedEventAttending}}
  <br>
{{/if}}

{{#if eventsNotReplied}}
  {{select-facebook content=eventsNotReplied
    title="You've been invited to:" value=selectedEventNotReplied}}
  <br>
{{/if}}

{{#if isEventSelected}}
  {{partial 'index/event-info'}}
  {{select-rsvp value=rsvp}}
  {{#each image in content.images}}
    {{image-card image=image}}
  {{/each}}
{{else}}
  {{partial 'index/intro-text'}}
{{/if}}
